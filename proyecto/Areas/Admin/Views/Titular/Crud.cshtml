@model Model.Titular

@{
    //ViewBag.Title = (Model.Idt > 0 ? Model.Ap_pat_t + " " + Model.Pri_nom_t : "Nuevo Registro de Titular");
    //ViewBag.idn = Model.Idt;

}


<ol class="breadcrumb">
    <li><a href="~/">Titulares</a></li>
    <li class="active"></li>
</ol>


    @using (Html.BeginForm("Guardar", "Titular", FormMethod.Post, new { id = "frm-titular" }))
    {

        <div class="panel panel-default">
            <div class="panel-heading">Información Titulares</div>
            <div class="panel-body">
                <div class="form-horizontal">
                    <div class="col-sm-6">

                        <input type="hidden" name="algo" value="1" />
                        
                        <div class="form-group">
                            <label><b>IdNino</b></label>
      
                            @Html.TextBoxFor(x => x.NinoId, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><b>Apellido Paterno</b></label>
                            @Html.TextBoxFor(x => x.Ap_pat_t, new { @class = "form-control", with = "9px" })
                        </div>
                        <div class="form-group">
                            <label><b>Apelido Materno</b></label>
                            @Html.TextBoxFor(x => x.Ap_mat_t, new { @class = "form-control", with = "9px" })
                        </div>
                        <div class="form-group">
                            <label><b>Apellido Casado</b></label>
                            @Html.TextBoxFor(x => x.Ap_casad_t, new { @class = "form-control", with = "9px" })
                        </div>
                        <div class="form-group">
                            <label><b>Primer Nombre</b></label>
                            @Html.TextBoxFor(x => x.Pri_nom_t, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><b>Segundo Nombre</b></label>
                            @Html.TextBoxFor(x => x.Seg_nom_t, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><b>Tercer Nombre</b></label>
                            @Html.TextBoxFor(x => x.Ter_nom_t, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label><b>Carnet de Identidad</b></label>
                            @Html.TextBoxFor(x => x.Ci_t, new { @class = "form-control" })
                        </div>


                        <div class="form-group">
                            <label><b>Expedido</b></label>
                            <select name="Expedido_t" class="form-control">
                
                                    <option value="LP">La Paz</option>
                                    <option value="OR">Oruro</option>
                                    <option value="PT">Potosi</option>
                                    <option value="CB">Cochambamba</option>
                                    <option value="SC">Santa Cruz</option>
                                    <option value="BN">Beni</option>
                                    <option value="PA">Pando</option>
                                    <option value="TJ">Tarija</option>
                                    <option value="CH">Chuquisaca</option>
                     
                            </select>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Fec_nac_t, htmlAttributes: new { @class = "control-label" })

                            @Html.EditorFor(model => model.Fec_nac_t, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.Fec_nac_t, "", new { @class = "text-danger" })

                        </div>
                        <div class="form-group">
                            <label><b>Edad</b></label>
                            @Html.TextBoxFor(x => x.Edad_t, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><b>Parentesco</b></label>
                            @Html.TextBoxFor(x => x.Parentesco_t, new { @class = "form-control" })
                        </div>
                        <div class="form-group">
                            <label><b>Celular</b></label>
                            @Html.TextBoxFor(x => x.Cel_t, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="text-left">
                        <button class="btn btn-primary" type="submit">Guardar</button>
                    </div>
                </div>
                
            </div>

        </div>
    }
